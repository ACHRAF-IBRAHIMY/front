<?xml version="1.0" encoding="UTF-8"?>
<search name="VisioConferenceFrame" label="Visio Conférence">

    <query>
    </query>
    <data>
        <query>
            <search />
            <idObject />
            <parentP />
        </query>
        <collapsed>false</collapsed>
        <numDossier />
        <numCommission />
        <login />
        <visualizer>0</visualizer>
        <profiles />
        <userId />
        <userName />
    </data>
    <view>
        <screen labelWidth="80" label="Visio Conférence" noToolBar="true">
            <script onLoad="true">
            // root.login=userQN;
             //context.formRender.notifyObservers("login");
             
             root.profiles=""+profiles;
             context.formRender.notifyObservers("profiles");
             root.userId=""+userId;
             context.formRender.notifyObservers("userId");
             root.userName=""+userName;
             context.formRender.notifyObservers("userName");
             root.visioURL =  visoUrl;
             context.formRender.notifyObservers("visioURL");
            </script> 
            <script postLoad="true">
                window.addEventListener('message', function(e) {
                  var iframe = document.getElementById("visio");
                  var eventName = e.data[0];
                  var data = e.data[1];
                  switch(eventName) {
                    case 'setStyle':
                      iframe.style = data;
                      break;
                  }
                }, false);
            </script>
            <vbox test="{visualizer},=,0" separator=",">
                <html>
                    <iframe id="visio" src="${visioURL}/conference/${numDossier}/${numCommission}?login=${login}&amp;profiles=${profiles}&amp;userId=${userId}&amp;userName=${userName}" style="height: 100vh;width: 100%;" allow="microphone; camera" />
                </html>
            </vbox>
            <vbox test="{visualizer},=,1" separator=",">
                <html>
                    <iframe id="visio" src="${visioURL}/conference/${numDossier}/${numCommission}/visualizer?profiles={profiles}&amp;userId={userId}&amp;userName={userName}" style="height: 100vh;width: 100%;" allow="microphone; camera" />
                </html>
            </vbox>
        </screen>
    </view>
</search>
