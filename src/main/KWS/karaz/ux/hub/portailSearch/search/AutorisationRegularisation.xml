<?xml version="1.0" encoding="UTF-8"?>
<search name="AutorisationRegularisation" label="Autorisation de régularisation">
  <query />
  <data>
    <query>
      <search />
      <idObject />
      <parentP />
    </query>
    <collapsed>false</collapsed>
  </data>
  <view transContext="portailSearch">
    <component name="htmlTranslate">
      
      <renderer name="autoMorcellement">
          <html>
              <span style="text-align:left;color:#333;" class="title-4x b-title">
                  <i class="far fa-object-ungroup" style="margin-right:10px" />
                  ${code | translate}
              </span>
          </html>
      </renderer>

      <renderer name="htmlPBr">
        <html>
          <p>
            ${code1 | translate}            
            <br />
            ${code2 | translate}
          </p>
        </html>
      </renderer>

      <renderer name="htmlPULLI">
        <html>
          <p>
            ${code1 | translate}
            <ul class="dashed">
              <li>${code2 | translate}</li>
              <li>${code3 | translate}</li>
            </ul>
          </p>
        </html>
      </renderer>

    </component>
    <screen labelWidth="80" label="My Dashboard" noToolBar="true" transContext="portailSearch" supportLangRedirection="true">

      <script onLoad="true">
              try{
                  root.userlang=userLocal;
                  context.formRender.notifyObservers("userlang");
              }catch(e){
                  console.log("ERROOOR",e);
              }
          </script>
      <script postLoad="true"> 
          $(".rokhas-home").click(function(){
               ApplicationManager.run("karaz/ux/hub/portailsearch/search/PublicCentralSearch","search", "PublicCentralSearch", {});
          });      
          
          
          $(".tags a").click(function(){
              console.log("href:"+$(this).attr("href"));
              var pos = $("."+$(this).attr("href").substr(1)).offset().top;
              $('html,body').animate(
                     {
                      scrollTop: pos
                 },
                 'slow');   
          });
          
          
          $(".scroll-top-sp").click(function(){
              $('html,body').animate(
                     {
                      scrollTop: $("body").offset().top
                 },
                 'slow'); 
          });
          
          
          $(".back-to-acc").click(function(){
              ApplicationManager.run("karaz/ux/hub/portailsearch/search/AcceptabiliteProjets","search", "Acceptabilite Projets", {});
          });


          // add right icon to ANNONCES header
          PCD_addtitle();

          // add style to main header
          if(root.userlang=="fr"){
            PCD_add_header_style_action(".pcd-header-AR", "AUTORISATION DE RÉGULARISATION");
          }
          if(root.userlang=="ar"){
            PCD_add_header_style_action(".pcd-header-AR", "تصريح التنظيم");
          }

          // header color 
          PCD_headerfieldset_color(".pcd-ha-color");

                       
   
     

     </script>
      <html id="hSeparator">
        <div style="height: 30px;" />
      </html>
      <vbox columns="70% 30%">
        <fieldset label="AUTORISATIONS URBANISTIQUES" collapsible="false" className="pcd-header-AR div-det-acc PDC-hov-title">
          <vbox className="accp">
            <htmlTranslate renderer="autoMorcellement" code="ARG02" />
            <vbox className="desc">
              <htmlTranslate renderer="htmlPBr" code1="ARG00" code2="ARG01" />
            </vbox>
            <vbox className=" PCD-gap-ic PCD-not-described">
              <html style="align-self: center; text-align: center;">
                <i class="fas fa-exclamation-triangle cl-orange" />
              </html>
              <htmlTranslate renderer="htmlPULLI" code1="AR03" code2="AR04" code3="AR05" />
            </vbox>
          </vbox>
        </fieldset>
                  <search searchQN="karaz/ux/hub/portailsearch/search/RightAside" /> 

      </vbox>
      <html>
        <div style="height: 30px;" />
      </html>
    </screen>
    <script onLoad="true" />
  </view>
</search>
