<?xml version="1.0" encoding="UTF-8"?>
<search name="OpinionTextClassification" label="Opinion TextClassification">
  <query />
  <data>
    <query />
    <collapsed>false</collapsed>
  </data>
  <view transContext="portailSearch">

    <component name="htmlTranslate">

      <renderer name="configMenu">
        <html>
          <div class="menu">
            <div class="config">
              <span>${code1 | translate}</span>
            </div>
            <div class="acc">
              <i class="fas fa-palette" />
              <span class="mlt">${code2 | translate}</span>
              <span class="km">${code3 | translate}</span>
            </div>
          </div>
          <div class="menu-config">
            <div class="item">
              ${code4 | translate} :
              <span class="index-name" />
              | ${code5 | translate} :
              <span class="size-match-all" />
            </div>
          </div>
          <div class="tab" />
          <div class="menu-config-bottom" />
        </html>
      </renderer>
    
      <renderer name="cfMenu">
        <html className="cf-menu" columns="50% 50%">
          <div class="cf-type-butt div-1 active">
            <span>${code1 | translate}</span>
          </div>
          <div class="cf-type-butt div-2">
            <span>${code2 | translate}</span>
          </div>
        </html>
      </renderer>
    
      <renderer name="clustersT">
        <html className="clusters">
          <i class="fas fa-layer-group sp1" />
          <select name="Clusters" class="select-cluster sp2" id="" />
          <span class="sp-sep" />
          <span class="sp3">${code | translate}</span>
          <span class="sp4">0</span>
        </html>
      </renderer>
    
      <renderer name="itemMenu">
        <html>
          <div class="menu-config">
            <div class="item">
              ${code1 | translate} :
              <span class="index-name" />
              | ${code2 | translate} :
              <span class="size-match-all" />
            </div>
          </div>
          <div class="tab" />
          <div class="menu-config-bottom" />
        </html>
      </renderer>
    
    </component>
    <screen labelWidth="80" label="My Dashboard" noToolBar="true" transContext="portailSearch" supportLangRedirection="true">
    
      <script onLoad="true">
              try{
                  root.userlang=userLocal;
                  context.formRender.notifyObservers("userlang");
              }catch(e){
                  console.log("ERROOOR",e);
              }
          </script>
      <script postLoad="true">
             removeLastRootPage(userName)
        	   typeClassification = 0
             getAllNotesClass();
             getAllClusters(false,0);
             getAllClusters(false,1);
             getAllClusters(true,0);
             $(".cf .cf-2 .clusters select").change(function(){
                 var cluster = $(".cf .cf-2 .clusters select option:selected").val();
                 findByCluster(cluster);
             });
             
             $(".cf .cf-2 .cf-menu .cf-type-butt").click(function(){
                 $(".cf .cf-2 .cf-menu .cf-type-butt").removeClass("active");
                 $(this).addClass("active");
                 
                 if($(this).hasClass("div-1")){
                     typeClassification=0;
                     getAllClusters(true,typeClassification);
                 }else{
                     typeClassification=1;
                     getAllClusters(true,typeClassification);
                 }
             });
             
             $(".cf .cf-1 .menu .acc span").click(function(){
                var val = ""; 
                
               if($(this).hasClass("mlt")){
                   val = "mlt"                 
               }else{
                   val = "km"
               }
                 
                var active = $(this).hasClass("active");
                
                if(active){
                    $(this).removeClass("active");
                }else{   
                    $(".cf .cf-1 .menu .acc span").removeClass("active");
                    $(this).addClass("active");
                }
                
                doColorCluster(val,active);
             
             });</script>
      <html>
        <div style="height: 30px;" />
      </html>
      <vbox className="cf" columns="50% 50%">
        <fieldSet className="cf-1" label="Liste des remarques">
          <htmlTranslate renderer="configMenu" code1="OTC00" code2="OTC01" code3="OTC02" code4="OTC03" code5="OTC04" />
        </fieldSet>
        <fieldSet className="cf-2" label="Classification">
          <htmlTranslate renderer="cfMenu" code1="OTC05" code2="OTC06" />
          <htmlTranslate renderer="clustersT" code="OTC07" />
          <htmlTranslate renderer="itemMenu" code1="OTC08" code12="OTC04" />
        </fieldSet>
      </vbox>
    </screen>
  </view>
</search>
